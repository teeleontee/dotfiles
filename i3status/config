general {
#	output_format = "dzen2"
        colors = true
	interval = 5
}

order += "battery 0"
order += "memory"
order += "load"
order += "tztime local"
order += "tztime moscow"

battery 0 {
	format = "%status %percentage %remaining %emptytime"
	format_down = "No battery"
	status_chr = "âš¡ CHR"
	status_bat = "ðŸ”‹ BAT"
	status_unk = "? UNK"
	status_full = "â˜» FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
	hide_if_equals_localtime = true
}

tztime moscow {
	format = "%Y-%m-%d %H:%M:%S %Z"
	timezone = "Europe/Moscow"
}

load {
	format = "%5min"
}

memory {
 	format = "MEM IN USE %used"
	threshold_degraded = "10%"
	format_degraded = "MEMORY: %free"
}

